{
  "name": "microservice",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm-run-all -p start:service1 start:service2 start:proxy",
    "start-http": "npm-run-all -p start-http-server start:service1 start:service2 start:proxy",
    "start:service1": "cd service1 && npm start && cd ..",
    "start:service2": "cd service2 && npm start && cd ..",
    "start:service1nm": "cd service1 && nodemon exec 'start'",
    "start:service2nm": "cd service2 && nodemon exec 'start'",
    "start:proxy": "node server.js",
    "dev:proxy": "nodemon server.js",
    "dev:service1": "cd service1 && npm run dev && cd ..",
    "dev:service2": "cd service2 && npm run dev && cd ..",
    "start-all": "npm-run-all -p start:service1 start:service2 start:proxy",
    "start-all-nm": "npm-run-all -p start:service1nm start:service2nm start:proxy",
    "start-all-nm2": "npm-run-all -p start:service1nm start:service2nm start:proxy",
    "dev-all": "npm-run-all -p dev:service1 dev:service2 start:proxy",
    "dev-all2": "npm-run-all -p dev:service1 dev:service2 dev:proxy",
    "dev-all3": "npm-run-all -p start:service1 start:service2 dev:proxy",
    "start-http-server": "http-server -p 4020 --cors"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "http-proxy-middleware": "^2.0.6",
    "http-server": "^14.1.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "npm-run-all": "^4.1.5"
  }
}
